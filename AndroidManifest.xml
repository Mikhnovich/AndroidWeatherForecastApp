<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mikhnovich.weatherforecast"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.mikhnovich.weatherforecast.CurrentWeatherListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mikhnovich.weatherforecast.ForecastDayListActivity"
            android:label="@string/title_activity_forecast_day_list" >
        </activity>
        <activity
            android:name="com.mikhnovich.weatherforecast.CitiesChoosingActivity"
            android:label="@string/title_activity_cities_choosing" >
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>