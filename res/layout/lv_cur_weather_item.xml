<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	 xmlns:android="http://schemas.android.com/apk/res/android"
	 android:layout_width="match_parent"
	 android:layout_height="match_parent"
	 android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivCurWeather"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:contentDescription="Current weather icon"
        android:src="@drawable/w113" />

    <TextView
        android:id="@+id/tvCityName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@+id/ivCurWeather"
        android:maxLines="1"
        android:text="London"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/tvWeatherDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvCityName"
        android:layout_below="@+id/tvCityName"
        android:layout_marginTop="3dp"
        android:text="Sunny"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ffffff"
        android:textSize="13sp" />
    
    <TextView
        android:id="@+id/tvCurTemperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		
		android:layout_alignBottom="@+id/tvWeatherDescription"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/tvWeatherDescription"
		
        android:text="21 \u00B0C"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#C1BFFF"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvWindSpeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_below="@+id/tvWeatherDescription"
        android:layout_marginTop="3dp"
        android:layout_alignLeft="@+id/tvWeatherDescription"
        android:text="Wind: 16 km/h"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ffffff"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tvWindDirection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
		android:layout_alignBottom="@+id/tvWindSpeed"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/tvWindSpeed"
        
        android:text="NWN"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#C1BFFF"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvLastObservationTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_below="@+id/tvWindSpeed"
        android:layout_marginTop="3dp"
        android:layout_alignLeft="@+id/tvWindSpeed"
        android:text="Last observation time: 4:03 am"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#C1BFFF"
        android:textSize="10sp" />
    
</RelativeLayout>